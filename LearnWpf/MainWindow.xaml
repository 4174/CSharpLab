<Window x:Class="LearnWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">

    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <DataTemplate x:Key="PersonTemplate">
            <StackPanel>
                <TextBlock Text="{Binding FirstName}" FontSize="20"
                           FontStyle="Italic"/>
                <TextBlock Text="{Binding Age}" FontSize="10"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <StackPanel>
        <ContentControl Name="contentControl"
                        Content="{Binding PersonOne}"
                        ContentTemplate="{StaticResource PersonTemplate}"/>
        <ContentControl Name="contentControl2"
                        Content="{Binding PersonOne}"
                        ContentTemplate="{StaticResource PersonTemplate}"/>
    </StackPanel>
</Window>
